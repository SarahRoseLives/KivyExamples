BoxLayout:
    orientation: 'vertical'
    padding: '20dp'
    spacing: '20dp'

    Label:
        id: status_label
        text: 'Stream is stopped'
        font_size: '20sp'

    MDRaisedButton:
        text: 'Play Stream'
        on_press: app.play_stream()

    MDRaisedButton:
        text: 'Stop Stream'
        on_press: app.stop_stream()
