<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: dp(300), dp(400)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        padding: dp(24)
        spacing: dp(24)
        MDTextField:
            id: username_field
            hint_text: 'Username'
            required: True
            helper_text_mode: "on_error"
            helper_text: "Invalid username"
        MDTextField:
            id: password_field
            hint_text: 'Password'
            required: True
            password: True
            helper_text_mode: "on_error"
            helper_text: "Invalid password"
        MDRaisedButton:
            text: 'Login'
            size_hint: None, None
            size: dp(120), dp(40)
            pos_hint: {'center_x': 0.5}
            on_release: root.check_login()
        Widget:
        MDRaisedButton:
            text: 'Create an account'
            size_hint: None, None
            size: dp(180), dp(40)
            pos_hint: {'center_x': 0.5}
            on_release: app.root.current = 'register'

<RegisterScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: dp(300), dp(400)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        padding: dp(24)
        spacing: dp(24)
        MDTextField:
            id: reg_username_field
            hint_text: 'Enter your username'
            required: True
            helper_text_mode: "on_error"
            helper_text: "Username already exists"
        MDTextField:
            id: reg_password_field
            hint_text: 'Choose a password'
            required: True
            password: True
            helper_text_mode: "on_error"
            helper_text: "Password should be at least 6 characters"
        MDRaisedButton:
            text: 'Create Account'
            size_hint: None, None
            size: dp(180), dp(40)
            pos_hint: {'center_x': 0.5}
            on_release: root.register_user()

<MainAppScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(48)
        Label:
            text: 'Welcome to the Main App Screen'
        MDRaisedButton:
            text: 'Logout'
            on_release: app.root.current = 'login'