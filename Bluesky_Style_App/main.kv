MDScreen:

    MDNavigationLayout:

        MDScreenManager:
            id: screen_manager

            MDScreen:
                name: "home"

                BoxLayout:
                    orientation: 'vertical'

                    MDTopAppBar:
                        title: "Home"
                        elevation: 0
                        pos_hint: {"top": 1}
                        specific_text_color: app.theme_cls.text_color
                        md_bg_color: '#FFFFFF'
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

                    BoxLayout:
                        orientation: 'vertical'
                        MDBoxLayout:
                            orientation: 'vertical'
                            adaptive_height: True


                        MDBottomNavigation:
                            panel_color: "#FFFFFF"

                            MDBottomNavigationItem:
                                name: 'screen 1'
                                icon: 'home'
                                #md_bg_color: '#FFFFFF'

                                MDLabel:
                                    text: 'Mail'
                                    halign: 'center'

                            MDBottomNavigationItem:
                                name: 'screen 2'
                                icon: 'account-search'
                                #md_bg_color: '#FFFFFF'
                                badge_icon: "numeric-5"

                                MDLabel:
                                    text: 'Twitter'
                                    halign: 'center'

                            MDBottomNavigationItem:
                                name: 'screen 3'
                                icon: 'chat-processing-outline'
                                #md_bg_color: '#FFFFFF'

                                MDLabel:
                                    text: 'LinkedIN'
                                    halign: 'center'

                            MDBottomNavigationItem:
                                name: 'screen 4'
                                icon: 'bell-outline'
                                #md_bg_color: '#FFFFFF'

                                MDLabel:
                                    text: 'LinkedIN'
                                    halign: 'center'

                            MDBottomNavigationItem:
                                name: 'screen 5'
                                icon: 'account-reactivate'
                                #md_bg_color: '#FFFFFF'

                                MDLabel:
                                    text: 'LinkedIN'
                                    halign: 'center'

            MDScreen:
                name: "inbox"

                BoxLayout:
                    orientation: 'vertical'

                    MDTopAppBar:
                        title: "Inbox"
                        elevation: 0
                        pos_hint: {"top": 1}
                        md_bg_color: '#FFFFFF'
                        specific_text_color: app.theme_cls.text_color
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

                    BoxLayout:  # Main content area
                        orientation: 'vertical'
                        MDLabel:
                            text: "Inbox Screen"
                            halign: "center"

            MDScreen:
                name: "outbox"

                BoxLayout:
                    orientation: 'vertical'

                    MDTopAppBar:
                        title: "Outbox"
                        elevation: 0
                        pos_hint: {"top": 1}
                        md_bg_color: '#FFFFFF'
                        specific_text_color: app.theme_cls.text_color
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

                    BoxLayout:  # Main content area
                        orientation: 'vertical'
                        MDLabel:
                            text: "Outbox Screen"
                            halign: "center"

        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 16, 16, 0)

            MDNavigationDrawerMenu:

                MDNavigationDrawerHeader:
                    title: "Header title"
                    #title_color: "#4a4939"
                    text: "Header text"
                    spacing: "4dp"
                    padding: "12dp", 0, 0, "56dp"

                MDNavigationDrawerLabel:
                    text: "Mail"

                MDNavigationDrawerItem:
                    icon: "home"
                    text: "Home"
                    on_release: app.switch_screen("home")

                MDNavigationDrawerItem:
                    icon: "gmail"
                    right_text: "+99"
                    #text_right_color: "#4a4939"
                    text: "Inbox"
                    on_release: app.switch_screen("inbox")

                MDNavigationDrawerItem:
                    icon: "send"
                    text: "Outbox"
                    on_release: app.switch_screen("outbox")

                MDNavigationDrawerDivider:

                MDNavigationDrawerLabel:
                    text: "Labels"

                MDNavigationDrawerItem:
                    icon: "information-outline"
                    text: "Label"

                MDNavigationDrawerItem:
                    icon: "information-outline"
                    text: "Label"
